<?xml version="1.0" encoding="utf-8" ?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

  <item android:state_pressed="false">
    <layer-list>
      <item android:left="2dp" android:bottom="2dp">
        <shape>
          <gradient android:angle="90" android:endColor="#ED6C64" android:startColor="#D71509"/>
          <stroke android:width="1dp" android:color="#ED6C64"/>
          <corners android:radius="4dp"/>
          <padding android:bottom="10dp" android:top="10dp" android:left="10dp" android:right="10dp"/>
        </shape>
      </item>
    </layer-list>
  </item>



  <item android:state_pressed="true">
    <layer-list>
      <item android:left="2dp" android:bottom="2dp">
        <shape>
          <gradient android:angle="270" android:endColor="#D71509" android:startColor="#F6A29C"/>
          <stroke android:width="1dp" android:color="#F6A29C"/>
          <corners android:radius="4dp"/>
          <padding android:bottom="10dp" android:top="10dp" android:left="10dp" android:right="10dp"/>
        </shape>
      </item>
    </layer-list>
  </item>

</selector>